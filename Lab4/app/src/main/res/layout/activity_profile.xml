<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#B86D6D"
        android:orientation="vertical">

        <TextView
            android:id="@+id/newavatar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:gravity="center"
            android:text="Select New Avatar"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <androidx.gridlayout.widget.GridLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"


            android:visibility="visible"
            app:columnCount="3"
            app:rowCount="2">


            <ImageView
                android:id="@+id/fury"
                android:background="@drawable/ic_logo_01"
                android:onClick="SetTeamIcon"
                app:layout_column="2"
                app:layout_columnSpan="1"
                app:layout_row="1"
                app:layout_rowSpan="1" />

            <ImageView
                android:id="@+id/blackstar"
                android:background="@drawable/ic_logo_02"
                android:onClick="SetTeamIcon"
                app:layout_column="0"
                app:layout_columnSpan="1"
                app:layout_row="0"
                app:layout_rowSpan="1" />

            <ImageView
                android:id="@+id/mteam"
                android:background="@drawable/ic_logo_03"
                android:onClick="SetTeamIcon"
                app:layout_column="2"
                app:layout_columnSpan="1"
                app:layout_row="0"
                app:layout_rowSpan="1" />

            <ImageView
                android:id="@+id/barcelone"
                android:background="@drawable/ic_logo_04"
                android:onClick="SetTeamIcon"
                app:layout_column="0"
                app:layout_columnSpan="1"
                app:layout_row="1"
                app:layout_rowSpan="1" />

            <ImageView
                android:id="@+id/canada"
                android:background="@drawable/ic_logo_05"
                android:onClick="SetTeamIcon"
                app:layout_column="1"
                app:layout_columnSpan="1"
                app:layout_row="0"
                app:layout_rowSpan="1" />

            <ImageView
                android:id="@+id/iteam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_logo_00"
                android:onClick="SetTeamIcon"
                app:layout_column="1"
                app:layout_columnSpan="1"
                app:layout_row="1"
                app:layout_rowSpan="1" />

        </androidx.gridlayout.widget.GridLayout>

        <Button
            android:id="@+id/btnload"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="70dp"

            android:text="LOAD FROM PHONE" />
    </LinearLayout>
</RelativeLayout>